<%- include('partials/header', {title: title}) %> <% if(locals.categories){ %>
<nav>
  <ul>
    <li><a href="/">All</a></li>
    <% locals.categories.forEach(category => { %>
    <li>
      <a href="/categories/<%= category.id %>"><%= category.name %></a>
    </li>
    <% }) %>
    <li><a href="/categories/new">+ Add Category</a></li>
    <li><a href="/categories">Manage Categories</a></li>
  </ul>
</nav>
<% } %>
<main>
  <% items.forEach(item=> { %>
  <div>
    <h2><%= item.name %></h2>
    <p>Quantity: <%= item.quantity %></p>
    <p>Added By: <%= item.added_by %></p>
    <a href="/item/<%= item.id %>">View</a>
    <form action="/item/<%= item.id %>/delete" method="POST">
      <button
        type="submit"
        onclick="return confirm('Are you sure you want to delete this item?');"
        class="button-delete"
      >
        ‚ùå
      </button>
    </form>
  </div>
  <% }) %>
  <a href="/item/new">Add item</a>
</main>
