<%- include('partials/header', {title: title}) %> <% if(locals.categories){ %>
<nav>
  <ul>
    <li><a href="/" class="category-nav-link">All</a></li>
    <% locals.categories.forEach(category => { %>
    <li>
      <a href="/categories/<%= category.id %>" class="category-nav-link"
        ><%= category.name %></a
      >
    </li>
    <% }) %>
    <li>
      <a href="/categories" class="category-nav-link">Manage Categories</a>
    </li>
  </ul>
</nav>
<% } %>

<main>
  <section class="unchecked-items">
    <h2>Shopping List</h2>
    <% uncheckedItems.forEach(item => { %> <%- include('partials/item-card', {
    item }) %> <% }) %>
  </section>

  <section class="checked-items">
    <h2>Checked Items</h2>
    <% checkedItems.forEach(item => { %> <%- include('partials/item-card', {
    item, checked: true }) %> <% }) %>
  </section>

  <a href="/item/new" class="button-add"
    ><svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      width="64"
      height="64"
      color="#000000"
      fill="none"
    >
      <path
        d="M2.5 12C2.5 7.52166 2.5 5.28249 3.89124 3.89124C5.28249 2.5 7.52166 2.5 12 2.5C16.4783 2.5 18.7175 2.5 20.1088 3.89124C21.5 5.28249 21.5 7.52166 21.5 12C21.5 16.4783 21.5 18.7175 20.1088 20.1088C18.7175 21.5 16.4783 21.5 12 21.5C7.52166 21.5 5.28249 21.5 3.89124 20.1088C2.5 18.7175 2.5 16.4783 2.5 12Z"
        stroke="#000000"
        stroke-width="2"
        stroke-linejoin="round"
      ></path>
      <path
        d="M12 8V16M16 12H8"
        stroke="#000000"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      ></path>
    </svg>
  </a>
</main>
