<%- include('partials/header', {title: title}) %>
    <main>
      <div>
        <h2><%= item.name %></h2>
        <p>Quantity: <%= item.quantity %></p>
        <% if(itemCategory) {  %>
          <p>Category: <%= itemCategory.name %></p>
        <% } else { %>
          <p>Category: None</p>
        <% } %>
        <p>Added On: <%= item.date.toDateString() %></p>
        <p>Added By: <%= item.added_by %></p>
        <a href="/item/<%= item.id %>/update">Update</a>
        <form action="/item/<%= item.id %>/delete" method="POST">
          <button
            type="submit"
            onclick="return confirm('Are you sure you want to delete this item?');"
            class="button-delete"
          >
          ‚ùå
          </button>
        </form>
      </div>
      <a href="/">Home</a>
    </main>
  </body>
</html>
