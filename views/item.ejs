<%- include('partials/header', {title: title}) %>
    <main>
      <div class="item">
        <h2 class=list-title><%= item.name %></h2>
        <p><b>Quantity</b>: <%= item.quantity %></p>
        <% if(itemCategory) {  %>
          <p><b>Category:</b> <%= itemCategory.name %></p>
        <% } else { %>
          <p><b>Category:</b> None</p>
        <% } %>
        <p><b>Date:</b> <%= item.date.toDateString() %></p>
        <p><b>Added By:</b> <%= item.added_by %></p>
        <div class="item-actions">
          <a class="button-update" href="/item/<%= item.id %>/update">Update</a>
          <form action="/item/<%= item.id %>/delete" method="POST">
            <button
              type="submit"
              onclick="return confirm('Are you sure you want to delete this item?');"
              class="button-delete"
            >
            Delete
            </button>
          </form>
        </div>
      </div>
      <a href="/">Home</a>
    </main>
  </body>
</html>
<%- include('partials/footer') %>